{
    "name": "OSM GEOData Tool",
    "version": "0.1.0",
    "description": "Fetches relevant Wikipedia links for OSM locations.",
    "manifest_version": 2,
    
    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    } ],
    "page_action": {
        "default_popup": "popup_nolinks.html",
        "default_title": "GEOData",
        "default_icon": {
            "16": "images/map_16.png",
            "32": "images/map_32.png",
            "48": "images/map_48.png",
            "128": "images/map_128.png"
        }
    },
    "icons": {
        "16": "images/map_16.png",
        "32": "images/map_32.png",
        "48": "images/map_48.png",
        "128": "images/map_128.png"
      },
    "background": {
        "scripts": ["scripts/geosearch.js", "scripts/search.js", "scripts/langsearch.js", "background.js", "geonames.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "declarativeContent",
        "https://www.openstreetmap.org/*",
        "https://en.wikipedia.org/*"
    ]
}